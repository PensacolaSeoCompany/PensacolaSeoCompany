RewriteEngine On

# Block access to backup directories
<IfModule mod_rewrite.c>
RewriteRule ^back-up(/.*)?$ - [F,L]
</IfModule>

# 1. Remove .php extension (internal rewrite - user sees clean URL)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# 2. Optional but RECOMMENDED: Redirect anyone who types .php to the clean URL (great for SEO)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# 3. Optional: Also handle .html if you ever have any
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]